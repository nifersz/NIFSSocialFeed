<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/panelBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PhotoCard" parent="android:Widget.TextView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="TweetCard" parent="android:Widget.TextView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/panelBackground</item>
    </style>

</resources>